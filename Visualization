import matplotlib.pyplot as plt
from wordcloud import WordCloud

# Publications over time
plt.bar(year_counts.index, year_counts.values)
plt.title("Publications by Year")
plt.xlabel("Year")
plt.ylabel("Count")
plt.show()

# Top journals
top_journals.plot(kind='bar')
